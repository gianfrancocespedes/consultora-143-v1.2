---
import Layout from '@/layouts/Layout.astro'
import Card from '@/components/Card.astro'
import { AreaChartGraph } from '@/components/dashboard/AreaChartGraph.jsx'
import { DonutChartGraph } from '@/components/dashboard/DonutChartGraph.jsx'
import { getI18N } from "@/i18n/index"

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

---

<Layout title={i18n.TITLE}>
    
    <Card numColSpan="6">
        <AreaChartGraph client:load/>
    </Card>

    <Card numColSpan="6">
        <DonutChartGraph client:load/>
    </Card>

</Layout>

